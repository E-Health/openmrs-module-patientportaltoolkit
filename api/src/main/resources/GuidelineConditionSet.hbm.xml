<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.patientportaltoolkit">
    <class table="patientportal_conditionset" name="GuidelineConditionSet">
        <id name="id" type="int" column="id"  unsaved-value="0">
            <generator class="native" />
        </id>
        <property name="conditionName" type="java.lang.String" column="set_name"/>

        <set name="conceptSet" table="patientportal_conditionset_conceptmapping" >
            <key column="conditionset_id" not-null="true" />
            <many-to-many entity-name="org.openmrs.Concept">
                <column name="concept_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="guidelines" table="patientportal_guideline_conditionsetmapping" >
            <key column="conditionset_id" not-null="true" />
            <many-to-many entity-name="org.openmrs.module.patientportaltoolkit.Guideline">
                <column name="guideline_id" not-null="true" />
            </many-to-many>
        </set>

    </class>
</hibernate-mapping>
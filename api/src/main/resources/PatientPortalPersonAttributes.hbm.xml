<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.patientportaltoolkit">
    <class table="patientportal_personattributes" name="PatientPortalPersonAttributes" lazy="false">
        <id name="id" type="int" column="id"  unsaved-value="0">
            <generator class="native" />
        </id>

        <many-to-one name="patient" class="org.openmrs.Person" column="patient_id" lazy="false" not-null="true"/>
        <property name="reminderTriggerDate" type="java.util.Date" column="reminder_trigger_date" not-null="false"
                  length="19" />

    </class>
</hibernate-mapping>
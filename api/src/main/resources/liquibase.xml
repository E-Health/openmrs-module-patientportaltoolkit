    <changeSet author="beapen" id="2018-10-18-1">
        <comment>Create the CANCER_COMMUNITY_RESOURCES Table</comment>
        <createTable tableName="CANCER_COMMUNITY_RESOURCES">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="char(38)"/>

            <column name="cancerType" type="char(255)"/>
            <column name="usefulcontacts" type="text"/>
            <column name="resources" type="text"/>

            <column name="created_by" type="char(38)"/>
            <column name="deleted_by" type="char(38)"/>

            <column name="created_on" type="datetime"/>
            <column name="deleted_on" type="datetime"/>

        </createTable>
    </changeSet>

